<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center; width: 100%; margin:25 0;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
           
            <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
               <div class="form-group">
                <label for="text">Camp Name:</label>
                <input type="text" class="form-control" name="camp[name]" placeholder="Camp name" value="<%= campground.name %>" >
               </div>
               <div class="form-group">
                <label for="url">Image URL:</label>   
                <input class="form-control" width type="text" name="camp[image]" placeholder="Image url" value="<%= campground.image %>" >
               </div>
               <div class="form-group">
                <label for="text">Description:</label>   
                <input class="form-control" width type="text" name="camp[description]" placeholder="A beautiful place to camp"    value="<%= campground.description %>">
               </div>
                <button class="btn btn-primary btn-block" type="submit" >Submit!!</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>
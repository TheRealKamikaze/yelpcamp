<% include ../partials/header %>


  <div class="container" style="padding: 10px 10px" >  
    <header class="jumbotron ">
      <div class="container">   
        <h1>Welcome to YelpCamp</h1>
        <p>blah blah blah jasgbsajkd dsfghjs sdfghsjdfhskjdbfsjf sdhfg asfdhg fjhfg</p>
        <p>
              <a class="btn btn-primary btn-large" href="/campgrounds/new" >Add a campground</a>
        </p>
      </div>
    </header>
  
    <div class="row panel text-center" style=".panel {display: flex; flex-wrap: wrap; }" >
          <% camps.forEach(function(places){ %>
          <div class="col-lg-3 col-md-3 col-sm-6" >            
            <div class="img-thumbnail img-fluid">
              <img src="<%= places.image %>" class="mx-auto d-block"  >
              <div class="caption">
                <h3>  <%= places.name %> </h3>
                <p class="small-text-muted"> <em>Created by <%=places.author.username%></em></p>
              </div>
               <p>
              <a href="/campgrounds/<%= places._id %>" class="btn btn-primary">More Info>></a>
            </p>
             </div>
          </div>
      <% }) %>
    </div>  
  </div>

<% include ../partials/footer %>
